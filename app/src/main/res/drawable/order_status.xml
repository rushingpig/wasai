<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray" />
            <stroke android:width="@dimen/rule_stroke_width" android:color="@color/gray" />
            <corners android:radius="20.0dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/titlebackground" />
            <stroke android:width="@dimen/rule_stroke_width" android:color="@color/titlebackground" />
            <corners android:radius="20.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/titlebackground" android:dashGap="3dp" android:dashWidth="6dp" />
            <!-- 虚线的高度 -->
            <size android:height="1dp" />
            <corners android:radius="20.0dip" />
        </shape>
    </item>
</selector>