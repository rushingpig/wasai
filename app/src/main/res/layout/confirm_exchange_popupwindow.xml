<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:paddingBottom="15.0dip"
        android:paddingTop="15.0dip"
        android:text="请确认您的兑换信息"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:background="@drawable/rounded_textview_white"
        android:orientation="vertical"
        android:padding="15.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:layout_marginLeft="20.0dip"
                android:text="收款账户："
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/pop_alipay_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:layout_marginLeft="20.0dip"
                android:text="兑换数量："
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/pop_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6.0dip"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="支出W币："
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/pop_wcoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginBottom="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5.0dip"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="预计到账："
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/pop_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 - 3 个工作日"
                android:gravity="center_vertical"
                android:textSize="14.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_height="wrap_content"
            android:padding="8.0dip"
            android:textColor="#ff4e4e"
            android:textSize="14.0sp"
            android:text="满10000w币提现就送1000w币，确认现在就提现吗"
            android:background="@drawable/fill_frame_red"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">

            <TextView
                android:id="@+id/left_button"
                android:layout_width="match_parent"
                android:layout_height="35.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg_action_button1"
                android:gravity="center"
                android:text="重新填写"
                android:textColor="@color/titlebackground"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/right_button"
                android:layout_width="match_parent"
                android:layout_height="35.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/rounded_buy_bg"
                android:gravity="center"
                android:text="确认兑换"
                android:textColor="@color/white"
                android:textSize="16.0sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>