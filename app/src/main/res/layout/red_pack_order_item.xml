<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_guide_item_light"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />
    <include layout="@layout/hr_action_item_group" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/red_pack_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hb_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/red_pack_type_and_money"
            android:layout_toRightOf="@id/red_pack_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/red_pack_status"
            android:layout_below="@id/red_pack_type_and_money"
            android:layout_toRightOf="@id/red_pack_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_alternative" />
    </RelativeLayout>


</LinearLayout>