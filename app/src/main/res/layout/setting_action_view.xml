<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="44.0dip"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip" />

        <ImageView
            android:id="@+id/redPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="5dp"
            android:src="@drawable/red_point"
            android:visibility="gone"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/extra_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:textColor="@color/input_hint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/extra_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/extra_desc"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44.0dip"
        android:layout_toLeftOf="@id/actions"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_major"
        android:textSize="16.0sp" />

</RelativeLayout>