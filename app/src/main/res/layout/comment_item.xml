<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commitem"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
	android:layout_marginRight="20dp"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/commleft"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_weight="5"
	    android:orientation="vertical" >
    
		<ImageView 
		    android:id="@+id/commimg"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:src="@drawable/avatar"
		    android:contentDescription="@string/app_name"/>
	
	</LinearLayout>

    <LinearLayout 
        android:id="@+id/commright"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_weight="1"
	    android:orientation="vertical" >
    
        <LinearLayout 
	        android:id="@+id/commright1"
		    android:layout_width="match_parent"
		    android:layout_height="20dp"
		    android:orientation="horizontal" >
		    
            <TextView
			    android:layout_marginLeft="0dp"
			    android:id="@+id/commnickname"
			    android:textColor="@color/text_black"
			    android:textSize="14sp"
			    android:gravity="left"
			    android:layout_width="100dp"
			    android:layout_height="wrap_content"/>
            <TextView
			    android:id="@+id/commtime"
			    android:layout_marginLeft="100dp"
			    android:textColor="@color/text_black"
			    android:textSize="10sp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout 
	        android:id="@+id/commright2"
		    android:layout_width="match_parent"
		    android:layout_height="20dp"
		    android:orientation="vertical" >
		    
            <TextView
			    android:layout_marginRight="10dp"
			    android:id="@+id/comminfo"
			    android:textColor="@color/text_black"
			    android:textSize="12sp"
			    android:gravity="left"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
            
        </LinearLayout>	
        
        <LinearLayout 
	        android:id="@+id/commright3"
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#eee"
		    android:orientation="vertical" >
        </LinearLayout>		
        
        <LinearLayout 
	        android:id="@+id/commright4"
		    android:layout_width="match_parent"
		    android:layout_height="19dp"
		    android:background="#fff"
		    android:orientation="vertical" >
        </LinearLayout>			
	
	</LinearLayout>	
	
</LinearLayout>