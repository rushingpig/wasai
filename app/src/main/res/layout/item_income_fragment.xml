<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10.0dip">


        <TextView
            android:id="@+id/item_income_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="0"
            android:textColor="@color/product_selector_textcolor_p"
            android:textSize="14.0sp" />


        <TextView
            android:id="@+id/item_income_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_income_title"
            android:layout_marginTop="5.0dip"
            android:text="0"
            android:textColor="@color/product_item_favorite_text"
            android:textSize="14.0sp" />


        <TextView
            android:id="@+id/item_income_fanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5.0dip"
            android:drawablePadding="5.0dip"
            android:text="0"
            android:textColor="@color/product_selector_textcolor_p"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/item_income_date"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/line_color" />

</LinearLayout>
