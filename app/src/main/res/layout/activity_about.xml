<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeaedef"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height" >

        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/abc_action_bar_default_height"
            android:background="@color/titlebackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/category_page_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/about"
                android:textColor="@color/ivory"
                android:textSize="16sp" />
        </LinearLayout>

        <include layout="@layout/menu_back" />
    </FrameLayout>

    <ImageView
        android:id="@+id/activity_about_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/activity_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_about_appname_margin_top"
        android:textColor="#ff444748"
        android:textSize="15.0sp" />
    <TextView
        android:id="@+id/activity_about_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_about_address_margin_bottom"
        android:text="@string/about_contact_email"
        android:textColor="#ff999999"
        android:textSize="13.0sp" />

    <View
        android:id="@+id/activity_about_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_above="@id/activity_about_address"
        android:layout_marginBottom="@dimen/activity_about_line_margin_bottom"
        android:layout_marginLeft="@dimen/activity_about_line_padding"
        android:layout_marginRight="@dimen/activity_about_line_padding"
        android:background="#ffdde1e4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_about_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_about_company_name_margin_bottom"
        android:text="@string/about_company_name"
        android:textColor="#ff777e83"
        android:textSize="16.0sp" />

</RelativeLayout>