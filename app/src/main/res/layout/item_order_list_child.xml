<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10.0dip"
    android:paddingLeft="15.0dip"
    android:paddingTop="10.0dip">

    <ImageView
        android:id="@+id/item_order_child_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_order_child_icon"
        android:layout_alignTop="@+id/item_order_child_icon"
        android:layout_toRightOf="@id/item_order_child_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="迪士尼2015夏季宝" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/item_order_child_title"
            android:background="@drawable/order_action_button"
            android:gravity="center"
            android:paddingBottom="3.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="3.0dip"
            android:text="待领取"
            android:textColor="@color/titlebackground"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/item_order_child_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_child_title"
            android:gravity="center_vertical"
            android:text="沙滩鞋男童童鞋什么" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:background="@drawable/channel_rightblock" />
</RelativeLayout>

