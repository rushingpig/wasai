<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7FFFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20.0dip">

        <TextView
            android:id="@+id/order_status_create"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/order_status"
            android:gravity="center"
            android:text="下单"
            android:textColor="@color/titlebackground" />

        <View
            android:id="@+id/line1"
            android:layout_width="10.0dp"
            android:layout_height="2.0dip"
            android:layout_gravity="center"
            android:background="@color/titlebackground" />

        <TextView
            android:id="@+id/order_status_record"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/order_status"
            android:gravity="center"
            android:text="订单记录"
            android:textColor="@color/titlebackground" />

        <View
            android:id="@+id/line2"
            android:layout_width="10.0dp"
            android:layout_height="2.0dip"
            android:layout_gravity="center"
            android:background="@color/titlebackground" />

        <TextView
            android:id="@+id/order_status_confirm"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/order_status"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@color/titlebackground" />

        <View
            android:id="@+id/line3"
            android:layout_width="10.0dip"
            android:layout_height="2.0dip"
            android:layout_gravity="center_vertical"
            android:background="@color/titlebackground" />

        <TextView
            android:id="@+id/order_status_finish"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/order_status"
            android:gravity="center"
            android:text="返利可用"
            android:textColor="@color/titlebackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10.0dip">

        <TextView
            android:id="@+id/order_status_create_time"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/text_gray" />


        <TextView
            android:id="@+id/order_status_record_time"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/text_gray" />


        <TextView
            android:id="@+id/order_status_confirm_time"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/order_status_finish_time"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/text_gray" />
    </LinearLayout>


</LinearLayout>
