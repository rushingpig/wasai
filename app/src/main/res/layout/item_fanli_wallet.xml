<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10.0dip">
        <TextView
            android:id="@+id/item_fanli_itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10.0dip"
            android:text="111"
            android:textColor="@color/product_selector_textcolor_p"
            android:textSize="14.0sp" />



        <TextView
            android:id="@+id/item_fanli_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_fanli_itemname"
            android:layout_marginTop="5.0dip"
            android:text="1212"
            android:textColor="@color/product_item_favorite_text"
            android:textSize="14.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_fanli_fanli"
            android:layout_toLeftOf="@+id/item_fanli_fanli"
            android:drawableRight="@drawable/zhangdanxiangqing"
            android:src="@drawable/yu" />

        <TextView
            android:id="@+id/item_fanli_fanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="5.0dip"
            android:drawableRight="@drawable/zhangdanxiangqing"
            android:text="111"
            android:textColor="@color/product_selector_textcolor_p"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_below="@+id/item_income_date"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/item_fanli_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_fanli_accountDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计返利到账时间是 2015-07-08"
            android:textColor="@color/product_selector_textcolor_p"
            android:textStyle="bold"
            android:textSize="15.0sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="商品名称"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/item_fanli_details_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="购买平台"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/item_fanli_details_platformName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="订  单  号"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/item_fanli_details_orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="下单时间"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/item_fanli_details_buydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
