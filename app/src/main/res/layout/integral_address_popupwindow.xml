<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/successPwdPopupwindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:paddingBottom="15.0dip"
        android:paddingTop="15.0dip"
        android:text="请填写以下信息"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:padding="10.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/rounded_textview_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:textColor="@color/product_selector_textcolor_p"
                android:text="收  件  人"
                android:textSize="14.0sp" />

            <EditText
                android:id="@+id/recipients_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14.0sp"
                android:maxLines="1"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginBottom="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:text="联系电话"
                android:textColor="@color/product_selector_textcolor_p"
                android:textSize="14.0sp" />

            <EditText
                android:id="@+id/phone_num_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14.0sp"
                android:inputType="phone"
                android:maxLength="16"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="收件地址"
                android:textColor="@color/product_selector_textcolor_p"
                android:layout_alignParentLeft="true"
                android:textSize="14.0sp" />

            <EditText
                android:id="@+id/address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:textSize="14.0sp"
                android:maxLines="5"
                android:layout_toRightOf="@id/text_view1"
                android:background="@drawable/edittext_background" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15.0sp"
            android:layout_marginBottom="20.0dip"
            android:textColor="@color/text_gray"
            android:text="务必认真填写收件信息，我们才能把兑换礼品送到您的手中哦~"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25.0dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/left_button"
                android:layout_width="match_parent"
                android:layout_height="35.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg_action_button1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/titlebackground"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/right_button"
                android:layout_width="match_parent"
                android:layout_height="35.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/rounded_buy_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16.0sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>