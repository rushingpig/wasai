<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light" tools:ignore="ResourceCycle">
         <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
          <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Transparent">
           <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
          <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- edittext style -->
    <style name="edtstyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/abc_action_bar_default_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingLeft">0dip</item>
    </style>

    <style name="PlainScroll">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="PlainList" parent="@style/PlainScroll">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:choiceMode">none</item>
    </style>

    <!-- button style -->
    <style name="btnStyleNor">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_txt_color</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnStyleSel">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_txt_color2</item>
        <item name="android:background">@drawable/buttonshape3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="timeline_text_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="timeline_like_text_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:width">30.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/time_line_like_text_color</item>
    </style>

    <style name="share_window_anim">
        <item name="android:windowEnterAnimation">@anim/share_window_in</item>
        <item name="android:windowExitAnimation">@anim/share_window_out</item>
    </style>

    <style name="Editor">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_major</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:background">@color/white</item>
    </style>

     <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar" >
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
	    <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
	    <item name="android:minHeight">8dip</item>
	    <item name="android:maxHeight">15dip</item>
	</style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5dip</item>
        <item name="android:minHeight">3dip</item>
    </style>

    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>
</resources>